<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/themes/smoothness/jquery-ui.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>
  
</head>
<body>
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <ul class="nav navbar-nav">
          <li><a href="/">Home</a></li>
          <li><a href="/calling_info">live calls</a></li>
          <li><a href="/reports/history_stats">history data</a></li>
          <li><a href="/reports/statistics">statistics</a></li>
          <li><a id="toggle_search">Search</a></li>
          <li><a href="/numbers">numbers</a></li>
        </ul>
    </div>
  </nav>
<div class='container' style="margin-top:60px;">
<% if notice.present? %>
<div class="alert alert-info" style="text-align: center; width: 70%; margin-left: 10%">
  <%= notice %>
</div>
<% end %>
<%= yield %>
</div>

</body>
</html>

<script>
$( "#toggle_search" ).click(function() {
    $( "#search" ).toggle();
});
</script>
